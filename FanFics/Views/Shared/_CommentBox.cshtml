@using Microsoft.AspNetCore.Mvc.Localization

@model FanFics.ViewModels.ReadonlyViewModel

@inject IViewLocalizer Localizer

<dl class="dl-horizontal">
    <dd>
        <div class="commentBox" style="width: 100%; margin: 0 auto;">
            @using (Html.BeginForm("AddComment", "Composition", FormMethod.Post, new { onsubmit = "return SubmitComment()" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md control-label">
                            @Localizer["YourRating"] <span style="font-weight:normal;">@Localizer["Stars"]</span>
                        </label>
                        <div class="col-md-7">
                            <div onmouseout="CRateSelected()">
                                <span class="starFade" id="Rate1" onclick="CRate(i)" onmouseover="CRateOver(1)" onmouseout="CRateOut(1)"></span><span class="starFade" id="Rate2" onclick="CRate(2)" onmouseover="CRateOver(2)" onmouseout="CRateOut(2)"></span><span class="starFade" id="Rate3" onclick="CRate(3)" onmouseover="CRateOver(3)" onmouseout="CRateOut(3)"></span><span class="starFade" id="Rate4" onclick="CRate(4)" onmouseover="CRateOver(4)" onmouseout="CRateOut(4)"></span><span class="starFade" id="Rate5" onclick="CRate(5)" onmouseover="CRateOver(5)" onmouseout="CRateOut(5)"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <textarea asp-for="Rating.Comments" id="Comment" required rows="5" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="hidden" asp-for="Rating.CompositionId" />
                            <input id="userId" type="hidden" asp-for="User.Id" />
                            <input type="hidden" asp-for="Rating.RatingCounter" id="RatingCounter" value="0" />
                            <br />
                            <input type="submit" id="btnRegister" name="btnRegister" value="@Localizer["SubmitComment"]" style="display: block; margin: 0 auto;" class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </dd>
</dl>
<script src="~/js/comment.js"></script>