@using Microsoft.AspNetCore.Mvc.Localization
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@inject IViewLocalizer Localizer
@{
    ViewBag.Title = @Localizer["TitleViewBag"];
}
<br />
<h2>@Localizer["Title"]</h2>
<br />
<div class="row justify-content-around">
    <div class="card text-white bg-secondary mb-3 col-4" style="max-width: 30rem; ">
        <div class="card-header">@Localizer["TitleHeaderLanguage"]</div>
        <div class="card-body">
            <h4 class="card-title">@Localizer["TitleCardLanguage"]</h4>
            <p class="card-text">@await Html.PartialAsync("_SelectLanguagePartial")</p>
        </div>
    </div>
    <div class="card text-white bg-secondary mb-3 col-4" style="max-width: 30rem; ">
        <div class="card-header">@Localizer["TitleHeaderTheme"]</div>
        <div class="card-body">
            <h4 class="card-title">@Localizer["TitleCardTheme"]</h4>
            <label class="form-label mt-4">@Localizer["TitleLabelTheme"]:</label>
            <select class="form-select" name="theme" id="theme">
                <option value="/lib/bootstrap/dist/css/dark.css">@Localizer["TitleThemeDark"]</option>
                <option value="/lib/bootstrap/dist/css/light.css">@Localizer["TitkeThemeLight"]</option>
            </select>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/theme.js"></script>




